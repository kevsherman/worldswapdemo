<!-- <a> trigger modal -->
<a href="#" class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true" data-bs-toggle="modal" data-bs-target="#listingModal<%=params['symbol']%><%=params['id'] %>">
  <img src="https://github.com/twbs.png" alt="twbs" width="32" height="32" class="rounded-circle flex-shrink-0">
  <div class="d-flex gap-2 w-100 justify-content-between">
    <div>
      <h6 class="mb-0"><%= params['symbol'] %></h6>
      <p class="mb-0 opacity-75"><%= params['name'] %></p>
    </div>
    <small class="opacity-50 text-nowrap"><%= params['id'] %></small>
  </div>
</a>

<!-- Modal -->
<div class="modal fade" id="listingModal<%=params['symbol']%><%=params['id'] %>" tabindex="-1" aria-labelledby="listingModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="listingModalLabel">Create Listing</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= params['name']%> token: <%= params['id'] %>
        <form>
          <div class="mb-3">
            <label for="listing-price-input" class="col-form-label">Sale Price:</label>
            <div class="input-group mb-3">
              <span class="input-group-text">$ETH</span>
              <input type="text" class="form-control" id="listing-price-input" aria-label="Amount (to the nearest dollar)">
              <span class="input-group-text">.00</span>
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary">Create Listing</button>
      </div>
    </div>
  </div>
</div>